<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="-1dp"
    tools:layout_editor_absoluteY="-41dp">

    <TextView
        android:id="@+id/HeaderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Move task to your desire screen"
        android:textSize="40dp"
        android:textFontWeight="800"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <Button
        android:id="@+id/btnTodo"
        android:layout_width="170dp"
        android:layout_height="65dp"
        android:background="@drawable/todo_shape"
        android:text="TO-DO"
        android:textColor="@color/white"
        android:textFontWeight="800"
        android:textSize="32dp"
        app:layout_constraintEnd_toStartOf="@+id/btnDoing"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="213dp" ></Button>

    <Button
        android:id="@+id/btnDoing"
        android:layout_width="170dp"
        android:layout_height="65dp"
        android:background="@drawable/doing_shape"
        android:text="DOING"
        android:textColor="@color/white"
        android:textFontWeight="800"
        android:textSize="32dp"
        app:layout_constraintEnd_toStartOf="@+id/btnDone"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnTodo"
        tools:layout_editor_absoluteY="213dp" ></Button>

    <Button
        android:id="@+id/btnDone"
        android:layout_width="170dp"
        android:layout_height="65dp"
        android:background="@drawable/done_shape"
        android:text="DONE"
        android:textColor="@color/white"
        android:textFontWeight="800"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnDoing"
        tools:layout_editor_absoluteY="213dp" ></Button>

</androidx.constraintlayout.widget.ConstraintLayout>